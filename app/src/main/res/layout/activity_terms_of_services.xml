<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activities.TermsOfServicesActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tosToolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:includeFontPadding="false"
                android:text="@string/tos_toolbar_txt"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:textColor="@color/primaryTextColor"
                android:textSize="17sp" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/tosAcceptButton"
        android:layout_below="@+id/tosToolbar"
        android:layout_marginVertical="5dp"
        android:padding="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:justificationMode="inter_word"
                android:text="The application is notifying you to the presence of an app that provides several services that are essential information for safer and more efficient use."
                android:textColor="@color/primaryTextColor"
                android:textSize="16sp"
                tools:targetApi="o" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_verified_user" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/roboto"
                    android:justificationMode="inter_word"
                    android:text="By pressing the Accept button, I declare I have read and accepted the following condition of use:"
                    android:textColor="@color/primaryTextColor"
                    tools:ignore="HardcodedText"
                    android:textSize="16sp"
                    tools:targetApi="o" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_mobile_restricted" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/roboto"
                    android:justificationMode="inter_word"
                    android:text="If we find the app is being used outside its terms of use, we may restrict access to it."
                    android:textColor="@color/primaryTextColor"
                    tools:ignore="HardcodedText"
                    android:textSize="16sp"
                    tools:targetApi="o" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_cancel_settings" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/roboto"
                    android:justificationMode="inter_word"
                    android:text="Any type of modification to the app or its components is not allowed."
                    android:textColor="@color/primaryTextColor"
                    tools:ignore="HardcodedText"
                    android:textSize="16sp"
                    tools:targetApi="o" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_privacy_policy" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/roboto"
                    android:justificationMode="inter_word"
                    android:text="Privacy Policy may be updated from time to time for any reason. We will notify you of any changes to our Privacy Policy by posting the new Privacy Policy here."
                    android:textColor="@color/primaryTextColor"
                    tools:targetApi="o"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_cloud_discconnect" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/roboto"
                    android:justificationMode="inter_word"
                    android:text="We do not share any kind of your Personal Data with third parties."
                    android:textColor="@color/primaryTextColor"
                    tools:ignore="HardcodedText"
                    android:textSize="16sp"
                    tools:targetApi="o" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto"
                android:justificationMode="inter_word"
                android:text="You can find out more information by clicking on the"
                android:textColor="@color/primaryTextColor"
                tools:ignore="HardcodedText"
                android:textSize="16sp"
                tools:targetApi="o" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:justificationMode="inter_word"
                    android:text="Following link :  "
                    android:textColor="@color/primaryTextColor"
                    tools:ignore="HardcodedText"
                    android:textSize="16sp"
                    tools:targetApi="o" />

                <TextView
                    android:id="@+id/tosHyperLinkTermsConditions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:foreground="?attr/selectableItemBackground"
                    android:justificationMode="inter_word"
                    android:text="@string/terms_and_conditions_of_use"
                    android:textColor="@color/primaryTextColor"
                    tools:ignore="HardcodedText"
                    android:textSize="16sp"
                    tools:targetApi="o" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:justificationMode="inter_word"
                    android:text="Following Link:  "
                    android:textColor="@color/primaryTextColor"
                    tools:ignore="HardcodedText"
                    android:textSize="16sp"
                    tools:targetApi="o" />

                <TextView
                    android:id="@+id/tosHyperLinkPrivacyPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:foreground="?attr/selectableItemBackground"
                    android:justificationMode="inter_word"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/primaryTextColor"
                    tools:ignore="HardcodedText"
                    android:textSize="16sp"
                    tools:targetApi="o" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/tosAcceptButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tosAd"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="60dp"
        android:backgroundTint="@color/themeColor"
        android:fontFamily="@font/roboto_bold"
        android:foreground="?attr/selectableItemBackground"
        android:text="Accept"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_marginBottom="5dp"
        app:backgroundTint="@color/themeColor"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/tosAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:orientation="vertical">

        <com.adsmodule.api.adsModule.views.NativeView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:adType="SMALL"
            app:strokeColor="@color/transparent"
            app:strokeWidth="1dp" />

    </LinearLayout>

</RelativeLayout>